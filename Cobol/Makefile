COLLEEN = colleen
GRACE = grace

all: $(COLLEEN) $(GRACE)

$(COLLEEN):
	cobc -Wall -x -o $(COLLEEN) colleen.cob
	@echo ""
	@echo "-------------------LIDL MAKEFILE------------------"
	@echo ""
	@echo "              > No useless colors <"
	@echo "              > No useless rules  <"
	@echo "                >  Easy to read <"
	@echo "                >  Easy to use  <"
	@echo ""
	@echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
	@echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
	@echo "%%%%%%%%%%%%%%%%...................%%%%%%%%%%%%%%%"
	@echo "%%%%%%%%%%%%...........................%%%%%%%%%%%"
	@echo "%%%%%%%%%.................................%%%%%%%%"
	@echo "%%%%%%%.....................................%%%%%%"
	@echo "%%%%%%.......................................%%%%%"
	@echo "%%%%%............%%%%%........................%%%%"
	@echo "%%%%.............*%%%%.........................%%%"
	@echo "%%%....%%%%%.......%%.....%%%%%%%%..%%%%%......%%%"
	@echo "%%%....%%%%%...,.%%%%%%/.%%%%%.%%%%.%%%%%......%%%"
	@echo "%%%...,%%%%%%%%%..%%%%%%.,%%%%%%%%.,%%%%%%%%%..%%%"
	@echo "%%%%................%..........................%%%"
	@echo "%%%%%.........................................%%%%"
	@echo "%%%%%%.......................................%%%%%"
	@echo "%%%%%%%.....................................%%%%%%"
	@echo "%%%%%%%%%.................................%%%%%%%%"
	@echo "%%%%%%%%%%%%...........................%%%%%%%%%%%"
	@echo "%%%%%%%%%%%%%%%%...................%%%%%%%%%%%%%%%"
	@echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
	@echo "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%"
	@echo ""

$(GRACE):
	cobc -Wall -x -o $(GRACE) grace.cob

clean:
	rm -f $(COLLEEN)
	rm -f $(GRACE)

fclean: clean

re: fclean all

.PHONY: all clean fclean re